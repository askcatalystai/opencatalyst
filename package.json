    "hono": "^4.6.16",
    "nanoid": "^5.0.9",
    "node-cache": "^5.1.2",
    "openai": "^4.77.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
