  "keywords": [
    "ecommerce",
    "ai",
    "chatbot",
    "whatsapp",
    "shopify",
    "woocommerce",
    "medusa",
    "customer-support"
  ],
  "license": "MIT",
  "author": "Catalyst AI",
  "repository": {
    "type": "git",
    "url": "https://github.com/askcatalystai/opencatalyst.git"
  },
  "bin": {
    "opencatalyst": "dist/cli.js"
  },
  "type": "module",
